<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marwilc.mymapsdeluxe.MainActivity">



    <ImageButton
        android:id="@+id/home_go_btn"
        android:background="@drawable/icons8_home_96"
        android:onClick="goToMapHome"
        android:text="@string/go_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276"
        app:layout_constraintHorizontal_bias="0.243"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/work_go_btn"
        android:onClick="goToMapWork"
        android:text="@string/go_to_work"
        android:background="@drawable/cityscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.286"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toRightOf="@+id/home_go_btn"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:id="@+id/cinema_go_btn"
        android:onClick="goToMapCinema"
        android:text="@string/go_to_cinema"
        android:background="@drawable/cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.206"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toRightOf="@+id/home_go_btn"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/work_go_btn" />

    <ImageButton
        android:background="@drawable/park"
        android:id="@+id/park_go_btn"
        android:onClick="goToMapPark"
        android:text="@string/go_to_park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.254"
        app:layout_constraintHorizontal_bias="0.412"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/home_go_btn"
        app:layout_constraintRight_toLeftOf="@+id/cinema_go_btn"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
